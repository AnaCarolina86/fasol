    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group">
                <label for="userName">Nome de Usu√°rio</label>
                <input type="text" class="form-control" name="userName">
