<%- include("partials/header"); -%>

    <section class="text-personalizado">
        <h3 class="subtitle-personalizado"><em>Somos diversos! O nosso corpo e gosto é único!</em></h3>

        <h3 class="description-personalizado">É pensando nisso que personalizamos a moda praia do seu jeito, com suas medidas, com o modelo que deseja, cor e estampa. Preencha seus dados abaixo e faça seu orçamento:</h3>
    </section>

    <section class="form-section">
        <h3 class="title-form">Formulário</h3>        

        <form action="/" method="POST" class="form">
             <!--Inputs for the images-->
            <div class="row images">
                <div class="col-sm-6 man-image">
                    <img src="/images/homem-medidas.png" alt="man measures swimming wear, medidas masculinas roupa de banho" class="man-image-measures">
                </div>
                <div class="col-sm-6 woman-image">
                    <img src="/images/mulher-medidas.png" alt="woman measures swimming wear bikini, medidas femininas bikini maiô" class="woman-image-measures">
                </div>                
            </div>  
            <div class="row inputs-images-people">
                <div class="col radiobox-people">
                    <div class="radioboxes">
                        <div>
                            <input type="radio" class="radiobox" id="man" name="gender" value="man">
                            <label for="man">Homem</label>
                        </div>
                        <div class="man-measures input-closed" id="man-measures">
                            <div class="height">
                                <label class="height-label" for="height-man">Altura</label>
                                <input class="input-form small-input" name="height-man" type="text" placeholder="cm">
                            </div>
                            <div class="hip">
                                <label class="hip-label" for="hip-man">Quadril</label>
                                <input class="input-form small-input" name="hip-man" type="text" placeholder="cm">
                            </div>
                            <div class="pants">
                                <label class="pants-label" for="pants">Numeração de Calça:</label>
                                <input class="input-form small-input"  name="pants" type="text">
                            </div>
                        </div>                  
                    </div>
                </div>
                <div class="col inputs-measures">
                    <div>
                        <input type="radio" class="radiobox" id="woman" name="gender" value="woman">
                        <label for="woman">Mulher</label>
                    </div>                    
                    <div class="woman-measures input-closed" id="woman-measures">
                        <div class="height">
                            <label class="height-label" for="height-woman">Altura</label>
                            <input class="input-form small-input" name="height-woman" type="text" placeholder="cm">
                        </div>
                        <div class="bra">
                            <label class="bra-label" for="bra-woman">Busto</label>
                            <input class="input-form small-input" name="bra-woman" type="text" placeholder="cm">
                        </div>
                        <div class="bra-size">
                            <label class="bra-label" for="bra">Numeração do Sutiã:</label>
                            <input class="input-form small-input"  name="bra" type="text">
                        </div>                        
                        <div class="hip">
                            <label class="waist-label" for="waist-woman">Cintura</label>
                            <input class="input-form small-input" name="waist-woman" type="text" placeholder="cm">
                        </div>
                        <div class="hip">
                            <label class="hip-label" for="hip-woman">Quadril</label>
                            <input class="input-form small-input" name="hip-woman" type="text" placeholder="cm">
                        </div>
                        <div class="pants">
                            <label class="pants-label" for="pants">Numeração de Calça:</label>
                            <input class="input-form small-input"  name="pants" type="text">
                        </div>                     
                        
                    </div>                    
                </div>
            </div>                 
                    
            <!--Inputs for the rest of the form-->
            <div class="fields-form">
                <div class="name">
                    <label class="name-label" for="name">Nome Completo:</label>
                    <input class="input-form name-input" name="name" type="text">
                </div>                 
                <div class="client-contact">
                    <label class="email-label" for="email">E-mail:</label>
                    <input class="input-form email-input"  name="email" type="email">
                    <label class="contact-label" for="contact">Contato:</label>
                    <input class="input-form contact-input"  name="contact" type="text">
                </div>                 
                
                <label class="model-name-label" for="model-url">Modelo para inspiração:</label>
                <input class="input-form model-name-input"  name="model-url" type="url" placeholder="Colar URL da Imagem">

                <!-- <label class="model-image-label" for="file"></label> -->
                <input class="input-form model-image-input" name="model-image" type="file"
                accept="image/*" enctype="multipart/form-data" placeholder="Fazer Upload de Imagem">
                <br>
                <button type="submit" class="submit-form">Enviar</button>
            </div>            
           
        </form>

    </section>

<%- include("partials/footer"); -%> 