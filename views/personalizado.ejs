<%- include("partials/header"); -%>

    <section class="text-personalizado">
        <h3 class="subtitle-personalizado"><em>Somos diversos! O nosso corpo e gosto é único!</em></h3>

        <h3 class="description-personalizado">É pensando nisso que personalizamos a moda praia do seu jeito, com suas medidas, com o modelo que deseja, cor e estampa. Preencha seus dados abaixo e faça seu orçamento:</h3>
    </section>

    <section class="form-section">
        <h3 class="title-form">Formulário</h3>        

        <form action="/" method="POST" class="form">
             <!--Inputs for the beginning of the form-->
             <div class="fields-form">
                <div class="field-form name">
                    <label class="name-label" for="name">Nome Completo:</label>
                    <input class="input-form name-input" name="name" type="text">
                </div>                 
                <div class="field-form client-contact">
                    <label class="email-label" for="email">E-mail:</label>
                    <input class="input-form email-input"  name="email" type="email">
                    <label class="contact-label" for="contact">Contato:</label>
                    <input class="input-form contact-input"  name="contact" type="text">
                </div>                 
                <div class="field-form client-model">
                    <label class="model-name-label" for="model-url">Modelo para inspiração:</label>
                    <input class="input-form model-name-input"  name="model-url" type="url" placeholder="Colar URL da Imagem">
                    <input type="file" name="file" id="file" class="inputfile"                      accept="image/*" enctype="multipart/form-data" data-multiple-caption="{count} files selected" multiple >
                    <label for="file">Fazer Upload de Imagem</label>
                   <!--    <label class="model-image-label" for="file"></label> 
                    <input class="input-form model-image-input" name="model-image" type="file"
                    accept="image/*" enctype="multipart/form-data" placeholder=""> --> 
                </div>
                
                <div class="row available-options">
                    <div class="col">
                        <div class="available-colors">
                            <h3>Cores Disponíveis</h3>
                            <div class="blocks">
                                <div class="pink"></div>
                                <div class="black"></div>
                                <div class="blue"></div>
                            </div>                            
                        </div>
                    </div>
                    <div class="col">
                        <div class="available-prints">
                            <h3>Estampas Disponíveis</h3>
                            <div class="pink"></div>
                            <div class="black"></div>
                            <div class="blue"></div>
                        </div>
                    </div>
                </div>                
                
            </div> 

            <div class="row woman-row">
                <div class="col-12 title">
                    <div class="title-measures">
                        <h2>Suas Medidas (Mulheres)</h2>
                    </div>
                </div>
                <div class="col">            
                    <div class="woman-measures-1">
                        <div class="field-form bra-size">
                            <label class="bra-label" for="bra">Tamanho do Sutiã:</label>
                            <input class="input-form small-input"  name="bra" type="text">
                        </div>  
                        <div class="field-form bra">
                            <label class="bra-label" for="bra-woman">Medida do Busto:</label>
                            <input class="input-form small-input" name="bra-woman" type="text" placeholder="">
                        </div>
                        <div class="field-form hip">
                            <label class="hip-label" for="hip-woman">Medida do Quadril:</label>
                            <input class="input-form small-input" name="hip-woman" type="text" placeholder="">
                        </div>
                        <!-- <div class="field-form thigh">
                            <label class="thigh-label" for="hip-woman">Medida da Coxa:</label>
                            <input class="input-form small-input" name="thigh-woman" type="text" placeholder="">
                        </div> -->
                        <div class="field-form panties">
                            <label class="panties-label" for="pantiest-woman">Tamanho da Calcinha:</label>
                            <input class="input-form small-input" name="panties-woman" type="text" placeholder="">
                        </div>
                        <div class="field-form sob-bra">
                            <label class="sob-bra-label" for="sob-bra-woman">Medida do Sob Busto:</label>
                            <input class="input-form small-input" name="sob-bra-woman" type="text" placeholder="">
                        </div>
                        <div class="field-form waist">
                            <label class="waist-label" for="waist-woman">Medida da Cintura:</label>
                            <input class="input-form small-input" name="waist-woman" type="text" placeholder="">
                        </div>
                        <div class="field-form height">
                            <label class="height-label" for="height-woman">Altura:</label>
                            <input class="input-form small-input" name="height-woman" type="text" placeholder="">
                        </div>
                        <div>
                            <p class="text-measures">PARA SABER SEU TAMANHO E COMO TIRAR SUAS MEDIDAS ROLE PARA BAIXO</p>
                        </div>
                    </div>                    
                </div>
                <div class="col ">
                    <div class="woman-measures-2">
                        <img src="images/woman-measures.PNG" alt="ilustração das medidas da mulher para o tamanho correto de bikinis">                         
                    </div>
                </div>
            </div>  
            
            <div class="row man-row">
                <div class="col-12 title">
                    <div class="title-measures">
                        <h3>Suas Medidas (Homens)</h3>
                    </div>                    
                </div>

                <div class="col ">
                    <div class="man-measures-1">
                        <div class="field-form hip">
                            <label class="hip-label" for="hip-man">Medida do Quadril:</label>
                            <input class="input-form small-input" name="hip-man" type="text" placeholder="">
                        </div>
                        <div class="field-form thigh">
                            <label class="thigh-label" for="thigh-man">Medida da Coxa:</label>
                            <input class="input-form small-input" name="thigh-man" type="text" placeholder="">
                        </div>
                        <div class="field-form waist">
                            <label class="waist-label" for="waist-man">Medida da Cintura:</label>
                            <input class="input-form small-input" name="waist-man" type="text" placeholder="">
                        </div>
                        <div class="field-form height">
                            <label class="height-label" for="height-man">Altura:</label>
                            <input class="input-form small-input" name="height-man" type="text" placeholder="">
                        </div>
                        <div>
                            <p class="text-measures">PARA SABER SEU TAMANHO E COMO TIRAR SUAS MEDIDAS ROLE PARA BAIXO</p>
                        </div>
                    </div>                  
                </div>
                <div class="col">
                    <div class="man-measures-2">
                        <div class="measures-img">
                            <img src="images/man-measures.PNG" alt="ilustração das medidas masculinas para roupa de banho">
                        </div>                        
                    </div>
                </div>
                <div class="col-12">
                    <div class="submit-form-div">
                        <button type="submit" class="btn submit-form">Enviar</button>
                    </div>
                </div>
            </div>                   
                     
        </form>

    </section>
    <section class="descritive-tables">
        <div class="woman-tables">
            <h3>MULHER - COMO TIRAR SUAS MEDIDAS</h3>
            <img src="images/woman-table1.PNG" alt="tabela explicativa sobre como tirar as medidas para saber o tamanho do bikini">
            <img src="images/woman-table2.PNG" alt="tabela explicativa sobre como tirar as medidas para saber o tamanho do bikini">
        </div>

        <div class="man-tables">
            <h3>HOMEM - COMO TIRAR SUAS MEDIDAS</h3>
            <img src="images/man-table.PNG" alt="tabela explicativa sobre como tirar as medidas para saber o tamanho da roupa de banho">
        </div>
        
    </section>

<%- include("partials/footer"); -%> 